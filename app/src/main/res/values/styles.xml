<?xml version="1.0" encoding="utf-8"?>
<resources>
<!-- Estilo para bordes redondeados -->
<style name="RoundedBox">
    <item name="android:background">@drawable/bg_rounded_box</item>
    <item name="android:padding">16dp</item> <!-- Padding interno -->
</style>

<!-- Estilo para botones con bordes redondeados -->
<style name="RoundedButton" parent="Widget.AppCompat.Button">
    <item name="android:backgroundTint">@color/purple_500</item>
    <item name="android:textColor">@android:color/white</item>
    <item name="android:buttonCornerRadius">16dp</item> <!-- Bordes redondeados -->
    <item name="android:textSize">16sp</item>
    <item name="android:textAllCaps">false</item>
</style>
</resources>
