<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_background"
    tools:context=".CreateAccount">

    <!-- Fondo con las burbujas -->
    <ImageView
        android:id="@+id/bubble_top_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/create_account_bubble1"
        android:translationX="-80dp"
        android:translationY="-140dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/bubble_top_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/create_account_bubble2"
        android:translationX="60dp"
        android:translationY="-60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintqTop_toTopOf="parent" />


    <!-- Logo -->

    <!-- Título -->

    <TextView
        android:id="@+id/title_create_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:lineSpacingExtra="8dp"
        android:text="Create\nAccount"
        android:textColor="@color/black"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="200dp" />

    <!-- Campo de email -->
    <EditText
        android:id="@+id/email_input"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="Email"
        android:background="@drawable/main_rounded_edittext"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="@color/black"
        android:textColorHint="@color/hint_color"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_create_account"
        app:layout_constraintWidth_percent="0.8" />

    <!-- Campo de contraseña -->
    <EditText
        android:id="@+id/password_input"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="Password"
        android:background="@drawable/main_rounded_edittext"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginTop="16dp"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="@id/email_input"
        app:layout_constraintEnd_toEndOf="@id/email_input"
        app:layout_constraintTop_toBottomOf="@id/email_input" />

    <!-- Campo del número de teléfono -->
    <LinearLayout
        android:id="@+id/phone_input_container"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/main_rounded_edittext"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@id/password_input"
        app:layout_constraintEnd_toEndOf="@id/password_input"
        app:layout_constraintTop_toBottomOf="@id/password_input">

        <!-- ImageView para la bandera -->
        <ImageView
            android:id="@+id/country_flag"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:scaleType="centerInside"
            android:padding="4dp"
            android:src="@drawable/flag_ic_uk" />

        <!-- Spinner para seleccionar el prefijo del país -->
        <Spinner
            android:id="@+id/country_spinner"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@android:color/transparent"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/light_gray" />

        <!-- Campo de entrada del número de teléfono -->
        <EditText
            android:id="@+id/phone_input"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="Your number"
            android:background="@android:color/transparent"
            android:paddingStart="8dp"
            android:textColor="@color/black"
            android:textColorHint="@color/hint_color" />
    </LinearLayout>

    <!-- Botón "Done" -->
    <Button
        android:id="@+id/button_done"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="Done"
        android:textColor="@color/white"
        android:backgroundTint="@color/purple"
        android:layout_marginTop="24dp"
        android:background="@drawable/main_bg_roundedbox"
        app:layout_constraintStart_toStartOf="@id/phone_input_container"
        app:layout_constraintEnd_toEndOf="@id/phone_input_container"
        app:layout_constraintTop_toBottomOf="@id/phone_input_container" />

    <!-- Texto "Cancel" -->
    <TextView
        android:id="@+id/button_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/button_done"
        app:layout_constraintStart_toStartOf="@id/button_done"
        app:layout_constraintEnd_toEndOf="@id/button_done" />

</androidx.constraintlayout.widget.ConstraintLayout>
